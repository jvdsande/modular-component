{
  "name": "modular-component",
  "description": "A React Component System for delightfully organized and deeply testable Modular Components",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "private": true,
  "scripts": {
    "build": "wsrun -t -p @modular-component/* -c build:self",
    "depcheck": "wsrun -s -p @modular-component/* -c depcheck",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.0",
    "depcheck": "^1.4.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "wsrun": "^5.2.4"
  }
}
